	public static void main(String[] args){
		
		CJframe JFramePrincipal = new CJframe();
		VariablesDeJeu VariablesSession= new VariablesDeJeu();		
		Accueil ecranAccueil= new Accueil(JFramePrincipal,VariablesSession);
		
   }
		public void actionPerformed (ActionEvent e){

		if (e.getSource()==jouer){
			JFramePrincipal.remove(jouer);
			JFramePrincipal.remove(aide);
			JFramePrincipal.remove(parametre);
			JFramePrincipal.remove(pokedex);
			JFramePrincipal.remove(charger);
			JFramePrincipal.remove(wow);
			JFramePrincipal.validate();
			JFramePrincipal.repaint();
			JMenuBar menuBar = new JMenuBar();
            JFramePrincipal.setJMenuBar(menuBar);
			JMenu menu = new JMenu("Nouvelle partie");
			menu.add(jouer);
			menuBar.add(menu);
			JMenu menu1 = new JMenu("Charger une partie");
			menu1.add(charger);
			menuBar.add(menu1);
			JMenu menu2 = new JMenu("Pokedex");
			menu2.add(pokedex);
			menuBar.add(menu2);
			JMenu menu3 = new JMenu("Aide");
			menu3.add(aide);
			menuBar.add(menu3);
			JMenu menu4 = new JMenu("Parametres");
			menu4.add(parametre);
			menuBar.add(menu4);
			VariablesSession.NouvelleCarte(100);
			fenetreCarte Map0= new fenetreCarte(JFramePrincipal,VariablesSession);
		}
		if (e.getSource()==aide){
			Aide = new FenetreAide();
			Aide.setVisible(true);
		}
		if (e.getSource()==parametre){
			Para=new FenetrePara();
			Para.setVisible(true);
			
		}
		if (e.getSource()==pokedex){
			pkx = new FenetrePokedex(dex);
			pkx.setVisible(true);
		}
		if (e.getSource()==charger){
			Charge = new FenetreCharge();
			Charge.setVisible(true);
		}
	}
