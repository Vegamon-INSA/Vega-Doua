import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.util.ArrayList;


public class Accueil extends JFrame implements ActionListener{
	private JButton jouer;
	private JButton aide;
	private JButton parametre;
	private JButton pokedex;
	private JLabel image;
	public FenetrePara Para;
	public FenetreAide Aide;
	public FenetrePokedex pkx;
    private ArrayList<VEGAMONS> dex;
	
	public Accueil(ArrayList<VEGAMONS> lePokedex){	
		this.setTitle("Végamon - Edition Doua");
		this.setSize(1000,1000);
        dex=lePokedex;

		// Pour placer la fenêtre au centre de l'écran
		this.setLocationRelativeTo(null);
		this.setLayout(null);
		// Pour permettre la fermeture de la fenêtre lors de l'appui sur la croix rouge
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		jouer = new JButton ("Jouer");
		jouer.setBounds(400,400,200,80);
		jouer.setBackground(Color.red);
		jouer.setFont(new java.awt.Font(Font.SERIF,Font.BOLD,25));
		this.add(jouer);
		jouer.addActionListener(this);
		
		aide= new JButton ("Aide");
		aide.setBounds(400, 600, 200, 80);
		aide.setBackground(Color.blue);
		aide.setFont(new java.awt.Font(Font.SERIF,Font.BOLD,25));
		this.add(aide);
		aide.addActionListener(this);
		
		parametre= new JButton ("Parametres");
		parametre.setBounds(400,300,200,80);
		parametre.setBackground(Color.white);
		parametre.setFont(new java.awt.Font(Font.SERIF,Font.BOLD,25));
		this.add(parametre);
		parametre.addActionListener(this);
		
		pokedex = new JButton ("Pokedex (Disponible ulterieurement)");
		pokedex.setBounds(400,500,200,80);
		pokedex.setBackground(Color.pink);
		pokedex.setFont(new java.awt.Font(Font.SERIF,Font.BOLD,25));
		this.add(pokedex);
		pokedex.addActionListener(this);

		JLabel image = new JLabel (new ImageIcon("poké.jpg")); //ca marche paass
		image.setBounds(400,300,100,200);
		this.add(image);
		this.setVisible(true);
		
	
	
	}
		public void actionPerformed (ActionEvent e){
		if (e.getSource()==jouer){
			System.out.println("Go s'amuser");
		}
		if (e.getSource()==aide){
			System.out.println("je vais t'aider");
			Aide = new FenetreAide();
			Aide.setVisible(true);
		}
		if (e.getSource()==parametre){
			System.out.println("On va dans les parametres");
			Para=new FenetrePara();
			Para.setVisible(true);
			
		}
		if (e.getSource()==pokedex){
			System.out.println("Allons voir tous les pokemons");
			pkx = new FenetrePokedex(dex);
			pkx.setVisible(true);
			}
}

}
