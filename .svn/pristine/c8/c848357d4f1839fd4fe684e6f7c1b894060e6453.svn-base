import javax.swing.*;
import java.awt.Color;
import java.awt.event.*;
import java.util.ArrayList;

public class Carte extends JFrame implements ActionListener {
	
	private String nomcarte;
	private String imageFond;
	private JLabel JLabelPersonnage;
	private int numero;
	private int[][] tableau = new int[25][25];
	
	public Carte (String nomcarte, String imageFond, int numero, int[][] tableau, GestionCombat JFramePrincipal){

       	// Ajout du Bonhomme à déplacer
        JLabelPersonnage = new JLabel(new ImageIcon("Images/Personnage.png")); 
        JLabelPersonnage.setBounds(100,100,44,60);
        JLabelPersonnage.setLayout(null);
        JFramePrincipal.add(JLabelPersonnage); 
        
       //Ajout du fond de la fenetre
        JLabel JLabelCarte = new JLabel (new ImageIcon(imageFond)); 
        JLabelCarte.setBounds(0,0,600,600);
        JLabelCarte.setLayout(null);
        JFramePrincipal.add(JLabelCarte);   
		JFramePrincipal.setVisible(true);
        
		this.nomcarte=nomcarte;
		this.numero=numero;
		this.tableau=tableau;
	}
	
	public boolean PossibiliteDeplacement (int x, int y){
        boolean possibilite = true;
        if (tableau[x][y] == 0){
            possibilite=false;
        }
        return possibilite;
    }
    
    public void DéplacementJoueur (int xIni, int yIni,int xFinal, int yFinal){
		for (int i=0; i<1000 ; i++){
			try
			{
				Thread.sleep(10);
			}
			catch(InterruptedException ex)
			{
				Thread.currentThread().interrupt();
			}
		JLabelPersonnage.setBounds(i,100,44,60);
		
		}	
	}
	public void actionPerformed(ActionEvent arg0) {
		// TODO Auto-generated method stub
				 
	}	
}

